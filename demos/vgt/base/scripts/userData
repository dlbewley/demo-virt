#cloud-config
users:
  - name: cloud-user
    lock_passwd: false
    plain_text_passwd: tree-can-surely
    groups: wheel
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh_authorized_keys:
      - ssh-rsa  acm@bunny

write_files:
  - path: /usr/local/bin/netsetup
    permissions: '0755'
    owner: root:root
    content: |
      #!/bin/bash
      bash /opt/netsetup $@

mounts:
  - [ /dev/disk/by-id/virtio-netsetup, /opt, iso9660, 'defaults' ]

runcmd:
  # this does not reliably run every time for some reason
  # maybe use a oneshot service that waits for the fs mount?
  - /usr/local/bin/netsetup
